<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" prefHeight="500.0" prefWidth="300.0" styleClass="vbox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="noteApp.view.SignUpLayoutController">
   <children>
      <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="90.0" text="%sigu">
               <font>
                  <Font name="Roboto Light" size="38.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="50.0" text="%username" />
            <TextField fx:id="username" styleClass="loginField" />
            <Label alignment="CENTER" prefHeight="50.0" text="%pw" />
            <PasswordField fx:id="password" styleClass="loginField" />
            <Label alignment="CENTER" layoutX="120.0" layoutY="175.0" prefHeight="50.0" text="%repeatPw" />
            <PasswordField fx:id="repeatPassword" layoutX="86.0" layoutY="225.0" styleClass="loginField" />
            <Line endX="100.0" startX="-100.0">
               <VBox.margin>
                  <Insets bottom="40.0" top="40.0" />
               </VBox.margin></Line>
            <Button id="register" mnemonicParsing="false" onAction="#handleSignUp" prefWidth="140.0" text="%sigu">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#handleBackToLogin" prefWidth="140.0" text="%back">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
